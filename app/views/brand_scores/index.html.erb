<p id="notice"><%= notice %></p>

<h1>Brand Scores</h1>

<table>
  <thead>
    <tr>
      <th>Term</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brand_scores.each do |brand_score| %>
      <tr>
        <td><%= brand_score.term %></td>
        <td><%= brand_score.score %></td>
        <td><%= link_to 'Show', brand_score %></td>
        <td><%= link_to 'Edit', edit_brand_score_path(brand_score) %></td>
        <td><%= link_to 'Destroy', brand_score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand Score', new_brand_score_path %>
